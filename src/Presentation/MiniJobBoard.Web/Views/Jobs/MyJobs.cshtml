@model IEnumerable<MiniJobBoard.Infrastructure.Entities.Job>
@{
    ViewData["Title"] = "My Job Postings";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-success">Post New Job</a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var job in Model)
        {
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="card-title">
                                    @job.Title
                                    @if (!job.IsActive)
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </h5>
                                <p class="card-text text-muted mb-2">
                                    @if (!string.IsNullOrEmpty(job.Location))
                                    {
                                        <span>@job.Location</span>
                                    }
                                    @if (!string.IsNullOrEmpty(job.JobType))
                                    {
                                        <span> • @job.JobType</span>
                                    }
                                </p>
                                <p class="card-text">@(job.Description.Length > 150 ? job.Description.Substring(0, 150) + "..." : job.Description)</p>
                                <small class="text-muted">Posted: @job.PostedDate.ToString("MMM dd, yyyy")</small>
                                <small class="text-muted"> • Applications: @job.Applications.Count</small>
                            </div>
                            <div class="col-md-4 text-end">
                                <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-info mb-2 w-100">View</a>
                                <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-warning mb-2 w-100">Edit</a>
                                <a asp-action="Applications" asp-route-id="@job.Id" class="btn btn-sm btn-primary mb-2 w-100">Applications (@job.Applications.Count)</a>
                                <form asp-action="Delete" asp-route-id="@job.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this job?');">
                                    <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No job postings yet</h4>
        <p>You haven't posted any jobs yet. Click the "Post New Job" button to create your first job posting.</p>
    </div>
}
