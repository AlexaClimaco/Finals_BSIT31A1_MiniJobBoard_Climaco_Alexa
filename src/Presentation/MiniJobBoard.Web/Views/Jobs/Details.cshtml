@model MiniJobBoard.Infrastructure.Entities.Job
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-8">
        <div class="mb-3">
            <h2 class="mb-1" style="color: var(--primary-color);">@Model.Title</h2>
            <p class="text-muted">Posted by @Model.Employer?.Email</p>
        </div>
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="card-title">Job Details</h5>
                
                <p><strong>Posted by:</strong> @Model.Employer?.Email</p>
                
                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <p><strong>Location:</strong> @Model.Location</p>
                }
                
                @if (!string.IsNullOrEmpty(Model.JobType))
                {
                    <p><strong>Job Type:</strong> @Model.JobType</p>
                }
                
                @if (Model.Salary.HasValue)
                {
                    <p><strong>Salary:</strong> @Model.Salary.Value.ToString("C")</p>
                }
                
                <p><strong>Posted Date:</strong> @Model.PostedDate.ToString("MMMM dd, yyyy")</p>
                
                @if (Model.Deadline.HasValue)
                {
                    <p><strong>Application Deadline:</strong> @Model.Deadline.Value.ToString("MMMM dd, yyyy")</p>
                }
                
                <hr />
                
                <h5>Description</h5>
                <p class="white-space-pre-wrap">@Model.Description</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        @if (User.Identity?.IsAuthenticated == true)
        {
            @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.EmployerId)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Manage Job</h5>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">Edit Job</a>
                        <a asp-action="Applications" asp-route-id="@Model.Id" class="btn btn-info w-100 mb-2">View Applications (@Model.Applications.Count)</a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this job?');">
                            <button type="submit" class="btn btn-danger w-100">Delete Job</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                @if (ViewBag.HasApplied == true)
                {
                    <div class="alert alert-info">
                        <p>You have already applied to this job.</p>
                        <a asp-controller="Applications" asp-action="MyApplications" class="btn btn-sm btn-primary">View My Applications</a>
                    </div>
                }
                else if (Model.IsActive)
                {
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Interested?</h5>
                            <a asp-controller="Applications" asp-action="Apply" asp-route-id="@Model.Id" class="btn btn-success btn-lg w-100">Apply Now</a>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Apply for this job</h5>
                    <p>Please login or register to apply.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 mb-2">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-secondary w-100">Register</a>
                </div>
            </div>
        }
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to Jobs</a>
        </div>
    </div>
</div>

<style>
    .white-space-pre-wrap {
        white-space: pre-wrap;
    }
</style>
